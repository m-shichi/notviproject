<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="jp.nextep.android.vtextviewer"
	android:versionCode="1"
	android:versionName="0.9.0">
	<uses-permission
		android:name="android.permission.INTERNET" />
	<uses-permission
		android:name="com.android.browser.permission.READ_HISTORY_BOOKMARKS" />
	<uses-permission
		android:name="com.android.browser.permission.WRITE_HISTORY_BOOKMARKS" />
	<uses-permission
		android:name="android.permission.VIBRATE"></uses-permission>
	<application
		android:icon="@drawable/app_title"
		android:label="@string/app_name"
		android:debuggable="true">
		<activity
			android:name="MainTitleActivity"
			android:label="@string/app_name"
			android:launchMode="singleTop"
			android:screenOrientation="portrait">
			<intent-filter>
				<action
					android:name="android.intent.action.MAIN" />
				<category
					android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity
			android:name=".app.MediaListActivity"
			android:label="@string/app_name"
			android:launchMode="singleTop"
			android:screenOrientation="portrait" />
		<activity
			android:name=".app.Preference"
			android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
			android:screenOrientation="portrait" />
		<activity
			android:name=".app.NavigateDownloadActivity"
			android:label="@string/app_name"
			android:launchMode="singleTop"
			android:screenOrientation="portrait" />
		<activity
			android:name=".app.BookmarkListActivity"
			android:label="@string/app_name"
			android:launchMode="singleTop"
			android:screenOrientation="portrait" />
		<activity
			android:name=".app.ContentListActivity"
			android:label="@string/title_contents"
			android:launchMode="singleTop"
			android:screenOrientation="portrait" />
		<activity
			android:name=".app.ArticleActivity"
			android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
			android:label="@string/app_name"
			android:screenOrientation="portrait" />
		<activity
			android:name=".app.ArticleImageActivity"
			android:label="@string/title_image_gallary"
			android:launchMode="singleTop"
			android:screenOrientation="portrait" />
	</application>
	<uses-sdk
		android:targetSdkVersion="8"
		android:minSdkVersion="7" />
	<supports-screens
		android:smallScreens="true"
		android:normalScreens="true"
		android:largeScreens="true"
		android:anyDensity="true" />
</manifest>